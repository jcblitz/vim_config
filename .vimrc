let mapleader=","
set guifont=Monaco:h14
set number
colorscheme darkspectrum
syntax on
set ic 
set incsearch 
set hlsearch 
set smartcase

set autoindent
set smartindent
set tabstop=2
set shiftwidth=2
set expandtab
set lines=45
set columns=160
map <leader>f :FufFile **/<CR>
set backupdir=~/.vim-tmp,~/.tmp,~/tmp,/var/tmp,/tmp
set directory=~/.vim-tmp,~/.tmp,~/tmp,/var/tmp,/tmp
